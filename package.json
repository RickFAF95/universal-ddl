{
  "name": "@tomko/universal-ddl",
  "private": true,
  "author": "tomko.team",
  "scripts": {
    "antlr": "java -cp \"antlr-4.7.2-complete.jar\" org.antlr.v4.Tool -Dlanguage=JavaScript UniversalDdl.g4 -o antlr-parser",
    "clear": "rimraf 'dist/*' 'antlr-parser/*'",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "build": "npm run clear && npm run antlr && npm run tsc",
    "lint": "tslint -p tsconfig.json -t verbose",
    "test": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paleo/universal-ddl.git"
  },
  "dependencies": {
    "antlr4": "^4.7.2",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5"
  },
  "devDependencies": {
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^10.14.1",
    "jest": "^24.5.0",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.3333"
  },
  "main": "dist/index.js",
  "bin": "./dist/cli.js"
}